{
  "ts": {
    "options": {
      "fast": "always",
      "target": "es3",
      "module": "commonjs",
      "declaration": false,
      "failOnTypeErrors": true,
      "sourceMap": false,
      "removeComments": false,
      "additionalFlags": "\"src/reference.d.ts\""
    },
    "build": {
      "outDir": "build",
      "src": [
        "src/**/*.ts"
      ]
    }
  },
  "watch": {
    "build": {
      "files": [
        "src/**/*.ts"
      ],
      "tasks": [
        "test"
      ]
    }
  }
}
